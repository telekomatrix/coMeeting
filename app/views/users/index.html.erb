<h1><%= t("user.plural") %></h1>
<table>
  <tr>
    <th><%= t("activerecord.attributes.user.email") %></th>
    <th><%= t("activerecord.attributes.user.name") %></th>
    <th><%= t("activerecord.attributes.user.created_at") %></th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.name %></td>
      <td><%= user.created_at.strftime("%d-%m-%Y %H:%M") %></td>
      <td><%= link_to t("user.actions.delete.label"), user_path(user), :method => :delete, :confirm => t("user.actions.delete.confirm") %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @users %>
