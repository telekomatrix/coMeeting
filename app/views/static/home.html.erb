
<%= form_for @meeting, :url => meetings_path, :html => { :class => "" } do |f| %>
  
  <div id="form" class="form" style="display: none;">
    <%= render :partial => "meetings/newform", :locals => {:f => f} %>
  </div>

  <div id="effect">
  	<hr id="line" style="display:none;"/>
  	<button type="submit" id="new" class="home-button"></button>
  </div>

  <button type="button" id="cancel" class="home-button" style="display:none;">X</button>


<% end %>


<%= hidden_field_tag :locale, locale %>         <%# for the calendar translation %>    
