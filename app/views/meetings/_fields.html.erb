  <p>
    <b><%= t("meeting.views.show.text.created_by") %>:</b><%= @meeting.creator.name_and_email %>
  </p>
  <p>
    <b><%= t("activerecord.attributes.meeting.subject") %>:</b><%= @meeting.subject %>
  </p>

  <p>
    <b><%= t("activerecord.attributes.meeting.location") %>:</b><%= @meeting.location %>
  </p>

  <p>
    <b><%= t("activerecord.attributes.meeting.date") %>:</b><% if !@meeting.date.nil? %><%= @meeting.date.strftime("%d/%m/%Y") %><% end %>
  </p>

  <p>
    <b><%= t("activerecord.attributes.meeting.time") %>:</b><% if !@meeting.time.nil? %><%= @meeting.time.strftime("%1Hh:%Mm") %> <%= @meeting.time_zone %><% end %>
  </p>

  <p>
    <b><%= t("activerecord.attributes.meeting.duration") %>:</b><% if !@meeting.duration.nil? %><%= @meeting.duration.strftime("%1Hh:%Mm") %><% end %>
  </p>

  <% unless @meeting.extra_info.blank? %>
    <p>
      <b><%= t("activerecord.attributes.meeting.extra_info") %>:</b><%= @meeting.extra_info %>
    </p>
  <% end %>