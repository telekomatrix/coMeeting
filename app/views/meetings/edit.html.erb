<div>
  <%= form_for @meeting, :url => meeting_path(@participation.link), :html => { :class => :form } do |f| %>
    
    <%= render :partial => "form", :locals => {:f => f} %>

    <button class="button" type="submit">
      <%= image_tag("/assets/icons/tick.png", :alt => "") %> <%= t("meeting.views.edit.buttons.save") %>
    </button>
    <span class="text_button_padding"><%= t("or") %></span>
    <%= link_to t("meeting.views.edit.buttons.cancel"), meeting_path(@participation.link), :class => "text_button_padding link_button" %>

  <% end %>
</div>

<script type="text/javascript">
  locale = "<%= I18n.locale %>";
</script>