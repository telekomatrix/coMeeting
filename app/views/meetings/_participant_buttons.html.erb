<b><%= t("meeting.views.show.text.attending.label") %> - </b>

<% if @participation.is_attending == 0 %>

	<%= link_to t("meeting.views.show.text.attending.confirm"), confirm_participation_path(@participation.link), :remote => true, :method => :post, :class => "attendance_button" %>
	<%= t("meeting.views.show.text.or") %>
	<%= link_to t("meeting.views.show.text.attending.decline"), decline_participation_path(@participation.link), :remote => true, :method => :post, :class => "attendance_button" %>

<% elsif @participation.is_attending == 1 %>

	<%= t("meeting.views.show.text.attending.confirm")%> (<%= link_to t("meeting.views.show.text.change"), decline_participation_path(@participation.link), :remote => true, :method => :post, :class => "attendance_button" %>)

<% elsif @participation.is_attending == -1 %>

	<%= t("meeting.views.show.text.attending.decline")%> (<%= link_to t("meeting.views.show.text.change"), confirm_participation_path(@participation.link), :remote => true, :method => :post, :class => "attendance_button" %>)

<% end %>